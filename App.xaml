<Application x:Class="LightSwitch.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             xmlns:local="clr-namespace:LightSwitch"
             StartupUri="Windows/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml" />

                <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <CornerRadius x:Key="{x:Static adonisUi:Dimensions.CornerRadius}">5</CornerRadius>
            <Thickness x:Key="{x:Static adonisUi:Dimensions.BorderThickness}">0</Thickness>
        </ResourceDictionary>
    </Application.Resources>
</Application>