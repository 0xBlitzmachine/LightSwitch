<Window x:Class="LightSwitch.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightSwitch"

        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"

        Title="293uFOIJ0932r4JRFQWf9djdjW" Height="300" Width="200"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource Slate4}"
        BorderBrush="{StaticResource Slate8}"
        BorderThickness="1">

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Top"
          Background="{StaticResource Slate6}"
          Height="30"
          MouseDown="Grid_MouseDown">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Text="LightSwitch"
                   FontWeight="UltraLight"
                   FontSize="20"
                   Foreground="{StaticResource Slate11}"/>


        <Button x:Name="ExitButton"
            Width="20"
                HorizontalAlignment="Right"
                Style="{StaticResource ExitButtonStyle}"
                Click="ExitButton_Click">

            <TextBlock
                Text="X"
                FontWeight="UltraLight"
                FontSize="12"
                Foreground="{StaticResource Red11}"/>
        </Button>
    </Grid>


</Window>
